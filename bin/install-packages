#!/bin/bash

set -o errexit
set -o nounset
set -o pipefail


RED="\033[0;31m"
GREEN="\033[0;32m"
ORANGE='\033[0;33m'
BLUE="\033[0;34m"
CYAN="\033[1;36m"
YELLOW="\033[1;33m"
LIGHT_BLUE="\033[1;34m"
NC="\033[0m"

PREFIX="${CYAN}[$(basename $0)]${NC} "


SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
REPO_DIR=$(realpath "${SCRIPT_DIR}/..")

PACKAGES_FILEPATH=${REPO_DIR}/packages.txt
cat ${PACKAGES_FILEPATH} | while read pkgname; do
    echo -e "${PREFIX}${BLUE}Installing ${pkgname}${NC}";
done

(set -x; sudo apt-get install -y $(< ${PACKAGES_FILEPATH}))

echo -e "${PREFIX}${GREEN}Done.${NC}\n";

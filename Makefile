
BIN=./bin


################################################################################
#
# targets
#
################################################################################

install: install_packages install_go



################################################################################
#
# apt-get
#
################################################################################

install_packages:
	$(BIN)/install-packages



################################################################################
#
# go
#
################################################################################

go: uninstall_go install_go

install_go: install_packages
	$(BIN)/install-go

uninstall_go:
	sudo rm -frv /usr/local/go

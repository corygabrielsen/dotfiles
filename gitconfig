[alias]
    a = add

    b = branch

    c = commit
    ca = commit -a
    cm = commit -m
    cam = commit -am

    co = checkout

    cp = cherry-pick

    d = diff
    dc = diff --cached
    dcc = diff --cached --check

    f = fetch

    l = log
    ld = log --pretty=format:"%C(yellow)%h\\ %C(magenta)%ad%C(auto)%d\\ %C(reset)%s%C(blue)\\ [%cn]%C(reset)" --decorate --date=short
    ldag = log --decorate --all --graph
    lg = log --pretty=format:"%C(yellow)%h%C(auto)%d\\ %C(reset)%s%C(blue)\\ [%cn]%C(reset)" --decorate --graph
    lgd = log --pretty=format:"%C(yellow)%h\\ %C(magenta)%ad%C(auto)%d\\ %C(reset)%s%C(blue)\\ [%cn]%C(reset)" --decorate --graph --date=short
    ll = log --pretty=format:"%C(yellow)%h%C(auto)%d\\ %C(reset)%s%C(blue)\\ [%cn]%C(reset)" --decorate --numstat
    lld = log --pretty=format:"%C(yellow)%h\\ %C(magenta)%ad%C(auto)%d\\ %C(reset)%s%C(blue)\\ [%cn]%C(reset)" --decorate --numstat --date=short
    ls = log --pretty=format:"%C(yellow)%h%C(auto)%d\\ %C(reset)%s%C(blue)\\ [%cn]%C(reset)" --decorate

    pl = pull

    pu = push

    st = status
    sb = status -sb

    rs1 = reset --soft "HEAD^"
    rs2 = reset --soft "HEAD^^"
    rs3 = reset --soft "HEAD^^^"

[color]
    ui = auto

[color "status"]
    added = green
    changed = yellow
    untracked = cyan

[core]
    pager = less -r

[credential]
    helper = cache --timeout 3600

[diff]
    tool = vimdiff

[hooks]
	showwhitespaceerrors = true
	removetrailingwhitespace = true
	removetrailingnewlines = true

[include]
    # For username / creds / backwards-compatability / etc.
    path = ~/.gitconfig.local

[init]
	templatedir = ~/.git-template

[merge]
    tool = vimdiff
